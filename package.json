{
  "name": "obras-blockchain",
  "version": "1.0.0",
  "description": "Sistema de Licitações Públicas com Blockchain - ETEC Polivalente Americana",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "create-uploads": "node -e \"require('fs').mkdirSync('uploads', {recursive: true})\"",
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage --detectOpenHandles --forceExit",
    "test:unit": "NODE_ENV=test jest tests/unit --detectOpenHandles --forceExit",
    "test:integration": "NODE_ENV=test jest tests/integration --detectOpenHandles --forceExit",
    "test:e2e": "NODE_ENV=test jest tests/integration/fluxo-completo.integration.test.js --detectOpenHandles --forceExit",
    "test:verbose": "NODE_ENV=test jest --verbose --detectOpenHandles --forceExit",
    "test:debug": "NODE_ENV=test node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test:auth": "NODE_ENV=test jest tests/integration/auth.integration.test.js --detectOpenHandles --forceExit",
    "test:licitacao": "NODE_ENV=test jest tests/integration/licitacao.integration.test.js --detectOpenHandles --forceExit",
    "test:proposta": "NODE_ENV=test jest tests/integration/proposta.integration.test.js --detectOpenHandles --forceExit",
    "test:blockchain": "NODE_ENV=test jest tests/integration/blockchain.integration.test.js --detectOpenHandles --forceExit",
    "lint": "echo 'Linting não configurado - considere adicionar ESLint'",
    "clean": "rm -rf node_modules coverage uploads/*.* && npm install"
  },
  "keywords": [
    "licitacoes",
    "blockchain",
    "transparencia",
    "nodejs",
    "express",
    "mongodb",
    "hackateen",
    "governo-digital"
  ],
  "author": "Equipe Obras&Blockchain - ETEC Polivalente Americana",
  "contributors": [
    "Lucas Gomes Dutra",
    "Matheus Franco",
    "Felipe Valentin Brongna",
    "José de Henrique Almeida"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "hhttps://github.com/lucasgomesdutra/Obras-Blockchain"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "jest": "^29.6.2",
    "mongodb-memory-server": "^9.0.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "maxWorkers": 1,
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!tests/**",
      "!jest.config.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/coverage/"
    ]
  }
}